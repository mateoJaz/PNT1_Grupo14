@model MVCVeterinaria.Models.Veterinario

@{
    ViewData["Title"] = "Eliminar Veterinario";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card border-danger shadow-sm">

                <div class="card-header-danger">
                    <h3 class="mb-0">Eliminar Veterinario</h3>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning text-center">
                        <strong>¿Está seguro que desea eliminar este profesional?</strong>
                        <br />
                        <small>Esta acción eliminará los datos del veterinario de forma permanente.</small>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.DNI):
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.DNI)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            Nombre Completo:
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Apellido), @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Matricula):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Matricula)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Especialidad):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Especialidad)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Telefono):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Direccion):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Id" />

                        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>

                        <input type="submit" value="Eliminar Veterinario" class="btn btn-danger" />
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
