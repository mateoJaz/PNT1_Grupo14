@model MVCVeterinaria.Models.Veterinario

@{
    ViewData["Title"] = "Details";
}

<div>
    <h3>@Html.DisplayFor(model => model.Nombre) @Html.DisplayFor(model => model.Apellido)</h3>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Matricula)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Matricula)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Especialidad)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Especialidad)
        </dd>
    </dl>
</div>
<div>
    <div class="d-flex justify-content-between align-items-center">
        <h4>Turnos Pendientes</h4>
        <a asp-action="Index" class="btn btn-secondary">Volver a Veterinarios</a>
    </div>

    @if (Model.Turnos != null && Model.Turnos.Any())
    {
        <table class="table">
            <thead>
                <tr>
                    <th>Fecha y Hora</th>
                    <th>Mascota</th>
                    <th>Cliente</th>
                    <th>Detalle</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var turno in Model.Turnos)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => turno.FechaHorario)
                        </td>
                        <td>
                            @if (turno.Mascota != null)
                            {
                                <strong>@turno.Mascota.Nombre</strong>
                            }
                            else
                            {
                                <span>(Sin Mascota Asignada)</span>
                            }
                        </td>
                        <td>
                            @if (turno.Mascota?.Cliente != null)
                            {
                                <span>@turno.Mascota.Cliente.Nombre @turno.Mascota.Cliente.Apellido</span>
                            }
                            else if (turno.Mascota != null)
                            {
                                <span>Cliente no disponible</span>
                            }
                            else
                            {
                                <span>(No aplica)</span>
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => turno.Detalle)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Este veterinario no tiene turnos asignados actualmente.</p>
    }
    
</div>
