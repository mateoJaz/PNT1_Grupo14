@model MVCVeterinaria.Models.Mascota

@{
    ViewData["Title"] = "Registrar Fallecimiento";
}

<div class="container mt-4">
    <div class="card border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Fallecimiento de @Model.Nombre</h3>
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle-fill"></i>
                <strong>Atención:</strong> Esta acción marcará a la mascota como "Fallecida".
                La mascota permanecerá en el historial del cliente y conservará su historia clínica, pero no se podran agendar nuevos turnos ni editar sus datos.
            </div>

            <h4>Datos de la Mascota</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-2">Dueño</dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Cliente.Apellido), @Html.DisplayFor(model => model.Cliente.Nombre)
                </dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Especie)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Especie)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Raza)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Raza)</dd>

                <dt class="col-sm-2">@Html.DisplayNameFor(model => model.Edad)</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Edad) año/s</dd>
            </dl>

            <hr />

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />

                <div class="d-flex justify-content-end gap-2">
                    <a asp-controller="Cliente"
                       asp-action="Details"
                       asp-route-id="@Model.ClienteId"
                       class="btn btn-secondary">
                        Cancelar y Volver al Cliente
                    </a>

                    <input type="submit" value="Confirmar Fallecimiento" class="btn btn-danger" />
                </div>
            </form>
        </div>
    </div>
</div>
