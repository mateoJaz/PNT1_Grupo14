@model MVCVeterinaria.Models.Mascota

@{
    ViewData["Title"] = "Registrar Fallecimiento";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card border-danger shadow-sm">

                <div class="card-header-danger">
                    <h3 class="mb-0">Fallecimiento de @Model.Nombre</h3>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning text-center">
                        <strong>Atención:</strong> Esta acción marcará a la mascota como "Fallecida".
                        <br />
                        <small>La mascota permanecerá en el historial, pero no se podrán agendar nuevos turnos ni editar sus datos.</small>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4 text-end">Dueño:</dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Cliente.Apellido), @Html.DisplayFor(model => model.Cliente.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Especie):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Especie)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Raza):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Raza)</dd>

                        <dt class="col-sm-4 text-end">@Html.DisplayNameFor(model => model.Edad):</dt>
                        <dd class="col-sm-8">@Html.DisplayFor(model => model.Edad) años</dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Id" />

                        <a asp-controller="Cliente"
                           asp-action="Details"
                           asp-route-id="@Model.ClienteId"
                           class="btn btn-secondary">
                            Cancelar y Volver al Cliente
                        </a>

                        <input type="submit" value="Confirmar Fallecimiento" class="btn btn-danger" />
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
