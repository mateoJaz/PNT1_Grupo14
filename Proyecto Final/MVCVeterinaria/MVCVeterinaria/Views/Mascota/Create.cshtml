@model MVCVeterinaria.Models.Mascota

@{
    ViewData["Title"] = "Agregar Mascota";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">

                <div class="card-header text-white">
                    <h3 class="mb-0" style="color: white !important; border-bottom: none;">Agregar Mascota</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="ClienteId" />

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="control-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre de la mascota" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Especie" class="control-label fw-bold"></label>
                            <input asp-for="Especie" class="form-control" placeholder="Ej: Perro, Gato" />
                            <span asp-validation-for="Especie" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Raza" class="control-label fw-bold"></label>
                            <input asp-for="Raza" class="form-control" />
                            <span asp-validation-for="Raza" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaNacimiento" class="control-label fw-bold"></label>
                            <input asp-for="FechaNacimiento" class="form-control" type="date" />
                            <span asp-validation-for="FechaNacimiento" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Peso" class="control-label fw-bold"></label>
                            <div class="input-group">
                                <input asp-for="Peso" class="form-control" />
                                <span class="input-group-text">Kg</span>
                            </div>
                            <span asp-validation-for="Peso" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-controller="Cliente"
                               asp-action="Details"
                               asp-route-id="@Model.ClienteId"
                               class="btn btn-secondary">
                                Volver al Cliente
                            </a>

                            <input type="submit" value="Guardar Mascota" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
