@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Datos Personales</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar Datos</a> |
    <a asp-controller="Mascota" asp-action="Create" asp-route-clienteId="@Model.Id">Agregar Mascota</a>|
    <a asp-action="Index">Volver a Inicio</a>
</div>


<div>
    <h4>Mascotas</h4>

    @if (Model.Mascotas != null && Model.Mascotas.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Especie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Raza)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Edad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Peso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Vivo)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Mascotas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Especie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Raza)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Edad)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Peso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vivo)
                        </td>
                        <td>
                            @if (item.Vivo)
                            {
                                <a asp-controller="Turno"
                                   asp-action="Create"
                                   asp-route-mascotaId="@item.Id"
                                   asp-route-clienteId="@Model.Id">Agendar Turno</a>
                                <span> | </span>

                                <a asp-controller="Mascota"
                                   asp-action="Edit"
                                   asp-route-id="@item.Id">Editar</a>
                                <span> | </span>
                            }

                            <a asp-controller="Mascota"
                               asp-action="Details"
                               asp-route-id="@item.Id">Historial Clinico</a>

                            @if (item.Vivo)
                            {
                                <span> | </span>
                                <a asp-controller="Mascota"
                                   asp-action="Delete"
                                   asp-route-id="@item.Id">Fallecimiento</a>
                            }
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">El cliente no tiene mascotas asignadas.</p>
    }
</div>
@{
    var todosLosTurnos = Model.Mascotas?
        .Where(m => m.Turnos != null)
        .SelectMany(m => m.Turnos)
        .Where(t => t.FechaHorario >= DateTime.Now)
        .OrderBy(t => t.FechaHorario)
        .ToList();
}

<h4>Turnos Pendientes</h4>

@if (todosLosTurnos != null && todosLosTurnos.Any())
{
    <table class="table table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Fecha y Hora</th>
                <th>Mascota</th>
                <th>Veterinario</th>
                <th>Detalle</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in todosLosTurnos)
            {
                <tr>
                    <td>@turno.FechaHorario.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>
                        @turno.Mascota.Nombre
                    </td>
                    <td>
                        @turno.Veterinario.Nombre @turno.Veterinario.Apellido
                    </td>
                    <td>
                        @Html.DisplayFor(t => turno.Detalle)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No hay turnos pendientes para las mascotas de este cliente.</p>
}