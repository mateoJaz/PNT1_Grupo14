@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Cliente</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.DNI)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DNI)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nombre)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nombre)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Apellido)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Apellido)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Email)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Email)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Telefono)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Telefono)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Direccion)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Direccion)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Editar Datos Personales</a> |
    <a asp-controller="Mascota" asp-action="Create" asp-route-clienteId="@Model.Id">Agregar Mascota</a>|
    <a asp-action="Index">Volver A Clientes</a>
</div>


<div>
    <h4>Mascotas</h4>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Especie)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Raza)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Edad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Peso)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Mascotas[0].Vivo)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @for (int i = 0; i < Model.Mascotas.Count; i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Especie)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Raza)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Edad)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Peso)
                    </td>
                    <td>
                        @Html.DisplayFor(m => m.Mascotas[i].Vivo)
                    </td>
                    <td>
                        <a asp-controller="Mascota" asp-action="Edit" asp-route-id="@Model.Mascotas[i].Id">Editar Mascota</a> |
                        <a asp-controller="Mascota" asp-action="Details" asp-route-id="@Model.Mascotas[i].Id">Detalles</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
