@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Details";
}

<h3 class="mb-3">@Html.DisplayFor(model => model.NombreCompleto)</h3>

<div class="card bg-light mb-4 shadow-sm" style="max-width: 800px;">
    <div class="card-body">

        <dl class="row mb-0">
            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.DNI):</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.DNI)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Email):</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Email)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Telefono):</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Telefono)</dd>

            <dt class="col-sm-3">@Html.DisplayNameFor(model => model.Direccion):</dt>
            <dd class="col-sm-9">@Html.DisplayFor(model => model.Direccion)</dd>
        </dl>

        <hr class="my-3" />

        <div class="d-flex gap-2">

            <a asp-controller="Mascota" asp-action="Create" asp-route-clienteId="@Model.Id" class="btn btn-success">
                Agregar Mascota
            </a>

            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning text-white">
                Editar Datos
            </a>

            <a asp-action="Index" class="btn btn-secondary">
                Volver a Inicio
            </a>
        </div>
    </div>
</div>


<div>
    <h4>Mascotas</h4>

    @if (Model.Mascotas != null && Model.Mascotas.Count > 0)
    {
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Nombre)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Especie)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Raza)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Edad)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Peso)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Mascotas[0].Vivo)
                    </th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Mascotas)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Especie)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Raza)
                        </td>
                        <td>
                            @{
                                if (item.Edad == -1)
                                {
                                    @Html.Raw("Mascota Fallecida")
                                }
                                else
                                {
                                    @Html.DisplayFor(modelItem => item.Edad)
                                    @Html.Raw(" año/s")
                                }
                            }
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Peso)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Vivo)
                        </td>
                        <td class="text-center">
                            <div class="d-flex gap-1">
                                @if (item.Vivo)
                                {
                                    <a asp-controller="Turno"
                                       asp-action="Create"
                                       asp-route-mascotaId="@item.Id"
                                       asp-route-clienteId="@Model.Id"
                                       class="btn btn-sm btn-mini btn-mini-verde"
                                       title="Agendar Turno">
                                        Agendar Turno
                                    </a>
                                }

                                <a asp-controller="Mascota"
                                   asp-action="Details"
                                   asp-route-id="@item.Id"
                                   class="btn btn-sm btn-mini btn-mini-celeste"
                                   title="Ver Historia Clínica">
                                    Historia Clínica
                                </a>

                                @if (item.Vivo)
                                {
                                    <a asp-controller="Mascota"
                                       asp-action="Edit"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-mini btn-mini-editar"
                                       title="Editar Mascota">
                                        Editar
                                    </a>

                                    <a asp-controller="Mascota"
                                       asp-action="Delete"
                                       asp-route-id="@item.Id"
                                       class="btn btn-sm btn-mini btn-mini-danger"
                                       title="Registrar Fallecimiento">
                                        Fallecimiento
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">El cliente no tiene mascotas asignadas.</p>
    }
</div>
@{
    var todosLosTurnos = Model.Mascotas?
        .Where(m => m.Turnos != null)
        .SelectMany(m => m.Turnos)
        .Where(t => t.FechaHorario >= DateTime.Now)
        .OrderBy(t => t.FechaHorario)
        .ToList();
}

<h4>Turnos Pendientes</h4>

@if (todosLosTurnos != null && todosLosTurnos.Any())
{
    <table class="table table-striped table-sm">
        <thead class="thead-dark">
            <tr>
                <th>Fecha y Hora</th>
                <th>Mascota</th>
                <th>Veterinario</th>
                <th>Detalle</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var turno in todosLosTurnos)
            {
                <tr>
                    <td>@turno.FechaHorario.ToString("dd-MM-yyyy HH:mm")</td>
                    <td>
                        @turno.Mascota.Nombre
                    </td>
                    <td>
                        @turno.Veterinario.Nombre @turno.Veterinario.Apellido
                    </td>
                    <td>
                        @Html.DisplayFor(t => turno.Detalle)
                    </td>
                    <td>
                        <a asp-controller="Turno"
                           asp-action="Delete"
                           asp-route-id="@turno.Id"
                           class="btn btn-sm btn-mini btn-mini-danger"
                           title="Cancelar Turno">
                            Cancelar Turno
                        </a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
}
else
{
    <p class="text-danger">No hay turnos pendientes para las mascotas de este cliente.</p>
}