@model IEnumerable<MVCVeterinaria.Models.Cliente>

@{
    ViewData["Title"] = "Index";
}
<div class ="d-flex justify-content-between align-items-center">
    <h1>Clientes</h1>
    <a asp-action="Create" class="btn btn-primary">Registrar Nuevo</a>
</div>


<form asp-action="Index" class="container border p-3 bg-light" method="post">

    <h3 class="mb-4">Filtrar</h3>

    <div class="row mb-3">
        <div class="col-md-6">
            <label for="apellido" class="form-label">Apellido:</label>
            <input type="text" id="apellido" name="apellido" class="form-control" placeholder="Ingrese Apellido" />
        </div>
        <div class="col-md-6">
            <label for="dni" class="form-label">DNI</label>
            <input type="number" id="dni" name="dni" class="form-control" placeholder="Ingrese DNI" />
        </div>
    </div>

    <hr>

    <div class="d-flex justify-content-end gap-2">
        <input type="reset" value="Borrar Filtros" class="btn btn-secondary" />
        <input type="submit" value="Buscar" class="btn btn-primary" />
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.DNI)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Apellido)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefono)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Direccion)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.DNI)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Apellido)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Telefono)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Direccion)
            </td>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id">Administrar Cliente</a>
            </td>
        </tr>
}
    </tbody>
</table>
