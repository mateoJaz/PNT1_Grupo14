@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Registrar Nuevo Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-sm">

                <div class="card-header text-white">
                    <h3 class="mb-0" style="color: white !important; border-bottom: none;">Registrar Nuevo Cliente</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="form-group mb-3">
                            <label asp-for="DNI" class="control-label fw-bold"></label>
                            <input asp-for="DNI" class="form-control" placeholder="Ingrese DNI sin puntos" />
                            <span asp-validation-for="DNI" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="control-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" placeholder="Nombre del cliente" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Apellido" class="control-label fw-bold"></label>
                            <input asp-for="Apellido" class="form-control" placeholder="Apellido" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" placeholder="ejemplo@correo.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Telefono" class="control-label fw-bold"></label>
                            <input asp-for="Telefono" class="form-control" placeholder="Teléfono de contacto" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Direccion" class="control-label fw-bold"></label>
                            <input asp-for="Direccion" class="form-control" placeholder="Dirección completa" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-end gap-2">
                            <a asp-action="Index" class="btn btn-secondary">Volver a Inicio</a>
                            <input type="submit" value="Guardar Cliente" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
