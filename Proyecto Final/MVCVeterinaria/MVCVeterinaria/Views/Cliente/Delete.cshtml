@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8">

            <div class="card border-danger shadow-sm">

                <div class="card-header-danger">
                    <h3 class="mb-0">Eliminar Cliente</h3>
                </div>

                <div class="card-body">

                    <div class="alert alert-warning text-center">
                        <strong>¿Está seguro que desea eliminar este cliente?</strong>
                        <br />
                        <small>Esta acción eliminará al cliente de forma permanente junto con sus mascotas y turnos asociados.</small>
                    </div>

                    <dl class="row mt-4">
                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.DNI):
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.DNI)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Nombre):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Nombre)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Apellido):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Apellido)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Email):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Email)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Telefono):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Telefono)
                        </dd>

                        <dt class="col-sm-4 text-end">
                            @Html.DisplayNameFor(model => model.Direccion):
                        </dt>
                        <dd class="col-sm-8">
                            @Html.DisplayFor(model => model.Direccion)
                        </dd>
                    </dl>

                    <hr />

                    <form asp-action="Delete" class="d-flex justify-content-end gap-2">
                        <input type="hidden" asp-for="Id" />

                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            Cancelar
                        </a>

                        <input type="submit" value="Eliminar Cliente" class="btn btn-danger" />
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>
