@model MVCVeterinaria.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">

            <div class="card shadow-sm">

                <div class="card-header-edit">
                    <h3>Editar Cliente</h3>
                </div>

                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="DNI" class="control-label fw-bold"></label>
                            <input asp-for="DNI" class="form-control" />
                            <span asp-validation-for="DNI" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="control-label fw-bold"></label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Apellido" class="control-label fw-bold"></label>
                            <input asp-for="Apellido" class="form-control" />
                            <span asp-validation-for="Apellido" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Email" class="control-label fw-bold"></label>
                            <input asp-for="Email" class="form-control" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Telefono" class="control-label fw-bold"></label>
                            <input asp-for="Telefono" class="form-control" />
                            <span asp-validation-for="Telefono" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Direccion" class="control-label fw-bold"></label>
                            <input asp-for="Direccion" class="form-control" />
                            <span asp-validation-for="Direccion" class="text-danger"></span>
                        </div>

                        <hr />

                        <div class="d-flex justify-content-between align-items-center">
                            <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-danger">
                                Eliminar
                            </a>

                            <div class="d-flex gap-2">
                                <a asp-action="Details"
                                   asp-route-id="@Model.Id"
                                   class="btn btn-secondary">
                                    Volver
                                </a>

                                <input type="submit" value="Guardar Cambios" class="btn btn-primary" />
                            </div>
                        </div>
                    </form>
                </div>
            </div>

        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
